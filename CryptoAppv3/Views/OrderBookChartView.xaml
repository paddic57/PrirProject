<UserControl x:Class="CryptoAppv3.Views.OrderBookChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoAppv3.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

    <Grid>
        <lvc:CartesianChart LegendLocation ="Right" Margin="10,10,727,269" Series="{Binding asksChartValuesSeries}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding asksLabel}"/>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
        <lvc:CartesianChart Margin="584,10,153,269" RenderTransformOrigin="0.5,0.5" Series="{Binding bidsChartValuesSeries}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding bidsLabel}"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis LabelFormatter="{Binding YFormatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <Button Command ="{Binding RefreshCommand}" Content="Button" HorizontalAlignment="Left" Margin="600,350,0,0" VerticalAlignment="Top" Height="69" Width="119"/>
    </Grid>
</UserControl>
